<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <span style="color: red">error</span>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, local: true do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <%= f.submit 'Update Book', class: "btn btn-primary" %>
<% end %>

<%= link_to "Show", book_path(@book), class: "btn btn-link" %>
<%= link_to "back", books_path, class: "btn btn-link" %>